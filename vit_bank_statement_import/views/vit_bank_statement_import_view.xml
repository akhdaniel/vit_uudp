<odoo>
    <data>
		
    	<record id="vit_bank_statement_import_search_view" model="ir.ui.view">
            <field name="name">vit.bank.statement.import.search</field>
            <field name="model">vit.bank.statement.import</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Bank Statement Import">
		            <field name="name" select="True"/>
                    <field name="bank_name"/>
		            <field name="journal_id"/>
		            <field name="date_import"/>
					<field name="filename" />
		            <field name="notes"/>
		            <filter name="group_journal" string="Group Journal" context="{'group_by':'journal_id'}"/>
                </search>
            </field>
        </record>

		<record id="vit_bank_statement_import_tree_view" model="ir.ui.view">
		    <field name="name">vit.bank.statement.import.tree</field>
		    <field name="model">vit.bank.statement.import</field>
		    <field name="type">tree</field>
		    <field name="arch" type="xml">
		        <tree string="Bank Statement Import">
		            <field name="name"/>
                    <field name="bank_name"/>
		            <field name="journal_id"/>
		            <field name="date_import"/>
					<field name="filename" />
		            <field name="notes"/>
		        </tree>
		     </field>
		</record>
		
        <record model="ir.ui.view" id="vit_bank_statement_import_form_view">
		    <field name="name">vit.bank.statement.import.form</field>
		    <field name="model">vit.bank.statement.import</field>
		    <field name="type">form</field>
		    <field name="arch" type="xml">
		    	
		    	<form string="Bank Statement Import">
		    		<header>
		    			<button name="action_process" icon="fa-cogs" string='Process' type="object" class="oe_highlight" states="draft"/>
                        <button string="Cancel" icon="fa-times" states="done" type="object" name="action_cancel"/>
		    			<field name="state" widget="statusbar" statusbar_visible="draft,done"/>
		    		</header>
		    		<sheet>
		    			<div class="oe_title">
							<label string="Number"/>
		       				<h1>
					 			<field name="name" readonly="1"/>
		    			    </h1>
	                    </div>
	                    <group col="4">
                            <field name="bank_name" attrs="{'readonly': [('state','!=','draft')]}"/>
	                    	<field name="journal_id" options="{'no_open':True, 'no_create':True}" attrs="{'readonly': [('state','!=','draft')]}" domain="[('company_id','=',company_id),('type','in',('bank','cash'))]"/>
							<field name="is_search_mid" attrs="{'readonly': [('state','!=','draft')]}"/>
	                    	<field name="date_import" attrs="{'readonly': [('state','!=','draft')]}" required="1"/>
							<field name="is_only_date" attrs="{'readonly': [('state','!=','draft')]}"/>
	                    	<field name="file_data" filename="filename" attrs="{'readonly': [('state','!=','draft')]}" required="1"/>
                            <field name="company_id" options="{'no_open':True, 'no_create':True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="bank_statement_id" readonly="1"/>
                            <field name="filename" invisible="1"/>
	                    </group>
	                    <group colspan="4" string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
		    		</sheet>
		    	</form>
		    	
			</field>
		</record>
    	
    </data>
</odoo>